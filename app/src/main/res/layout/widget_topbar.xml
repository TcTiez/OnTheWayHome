<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="@dimen/xxh_189px"
              android:background="@android:color/transparent"
              android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/topbar_left_button"
            android:layout_width="@dimen/xxh_156px"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:contentDescription="@string/blank"
            android:scaleType="center"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/topbar_title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/xxh_60px"
            android:layout_marginRight="@dimen/xxh_60px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_50pt"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/topbar_right_button"
            android:layout_width="@dimen/xxh_156px"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:contentDescription="@string/blank"
            android:scaleType="center" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/xxh_21px"
        android:layout_weight="0"
        android:background="@android:color/black" />

</LinearLayout>